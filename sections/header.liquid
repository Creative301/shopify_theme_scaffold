<nav class="navbar navbar-expand-lg navbar-light bg-light">
	{% comment %} Shop Logo {% endcomment %}
	<a class="navbar-brand" href="/">{{ shop.name | escape }}</a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		{% comment %} Show menu from the admin {% endcomment %}
		<ul class="navbar-nav mr-auto">
			{%- for link in linklists.main-menu.links -%}
					<li class="nav-item">
							<a class="nav-link" href="{{ link.url }}">{{ link.title | escape }}</a> 
					</li>
			{%- endfor -%}
		</ul>

		{% comment %} Hard coded menu {% endcomment %}
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link" href="/search">Search</a>
			</li>
			{%- if shop.customer_accounts_enabled -%}
				{%- if customer -%}
					<li class="nav-item">
						<a class="nav-link" href="/account">{{ customer.first_name | escape }}</a>
					</li>
				{%- else -%}
					<li class="nav-item">
						<a class="nav-link" href="/account/login">Log in</a>
					</li>
			{%- endif -%}
		{%- endif -%}
			<li class="nav-item">
				<a class="nav-link" href="/cart">Cart ({{ cart.item_count }})</a>
			</li>
		</ul>
	</div>
	{% comment %} End navbar-collapse {% endcomment %}
</nav>